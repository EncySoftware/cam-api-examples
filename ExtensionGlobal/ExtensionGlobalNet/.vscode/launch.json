    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CAM",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "C:/Program Files/ENCY Software/ENCY/Bin64/ency.exe",
            "args": [
